<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <application
        android:label="liguid_glass_effect"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher_default">
        <!--
            ⚠️ IMPORTANT: android:icon above changed from ic_launcher → ic_launcher_default
            This ensures the application-level icon also reflects the default alias icon.
        -->

        <!--
            MainActivity:
            - Keep exported="true" so Flutter tools can find it
            - Keep the intent-filter so flutter run works
        -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
        ═══════════════════════════════════════════════════════════════════════
         DYNAMIC ICON ACTIVITY ALIASES
         
         HOW flutter_dynamic_icon_plus v1.4.0 MATCHES ICONS ON ANDROID:
         
         The package takes your iconName string (e.g. "dark") and looks for
         an activity-alias whose android:name ends with that string
         (case-insensitive). So:
         
           iconName: "dark"    → matches  android:name=".MainActivitydark"
           iconName: "blue"    → matches  android:name=".MainActivityblue"
           iconName: null      → enables  android:name=".MainActivitydefault"
         
         ⚠️ The suffix MUST be all lowercase to match the iconName string.
         ⚠️ Only ONE alias should have android:enabled="true" at a time.
             The package handles enabling/disabling at runtime.
        ═══════════════════════════════════════════════════════════════════════
        -->

        <!-- DEFAULT — enabled=true (this is the active icon at install time) -->
        <activity-alias
            android:name=".MainActivitydefault"
            android:enabled="true"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_default"
            android:label="liguid_glass_effect"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- DARK — enabled=false -->
        <activity-alias
            android:name=".MainActivitydark"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_dark"
            android:label="liguid_glass_effect"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- BLUE — enabled=false -->
        <activity-alias
            android:name=".MainActivityblue"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_blue"
            android:label="liguid_glass_effect"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- RED — enabled=false -->
        <activity-alias
            android:name=".MainActivityred"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_red"
            android:label="liguid_glass_effect"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- GREEN — enabled=false -->
        <activity-alias
            android:name=".MainActivitygreen"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_green"
            android:label="liguid_glass_effect"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- GOLD — enabled=false -->
        <activity-alias
            android:name=".MainActivitygold"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_gold"
            android:label="liguid_glass_effect"
            android:targetActivity=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- Don't delete the meta-data below.
             This is used by the Flutter tool to generate GeneratedPluginRegistrant.java -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

    </application>

    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>

</manifest>